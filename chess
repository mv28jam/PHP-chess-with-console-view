#!/usr/bin/env php
<?php
//check for version
if((int)substr(str_replace('.','', phpversion()), 0, 2) < 71){
    die('PHP version have to be 7.1 or higher.'.PHP_EOL);
}

//Ñomposer
require_once (__DIR__ . '/vendor/autoload.php');

//load
foreach(['src/traits/*.php', 'src/*.php'] as $mask){
    foreach (glob($mask) as $file) {
        require_once ($file);
    }
}

